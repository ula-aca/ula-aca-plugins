{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits"
    },
    "bootstap": {
      "hoist": true
    },
    "version": {
      "allowBranch": "master"
    }
  },
  "ignoreChanges": ["**/*.md", "**/tests/**"],
  "version": "independent"
}
